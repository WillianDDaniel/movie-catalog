<%= stylesheet_link_tag "director", "data-turbo-track": "reload" %>

<div class='directors-container'>

  <h2>Catálogo de Diretores</h2>

  <%= "Nenhum diretor cadastrado" if @directors.empty? %>

  <div class='directors-list'>
    <% @directors.each do |director| %>

      <div class='single-director'>
        <div class='director-info'>
          <h3><%= director.name %></h3>
          
          <%= link_to "Ver Mais", director_path(director), class: "btn-show-more" %>

          <div class='director-actions'>
            <%= link_to "Editar", edit_director_path(director), class: "btn-edit" %>
            <%= link_to "Excluir", director_path(director), data: {turbo_method: :delete, turbo_confirm: "Confirmar exclusão do diretor?"}, class: "btn-delete" %>
          </div>

        </div>

      </div>

    <% end %>
  </div>

</div>
