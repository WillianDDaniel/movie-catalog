<section class='section-container align-center '>

  <h2 class='section-title'>Cadastrar novo Diretor</h2>

  <div class="error">
    <% if flash[:errors] %>
      <p>
        <%= format_error_messages(flash[:errors]) %>
      </p>
    <% end %>
  </div>

  <%= form_with model: @director , local: true, html: { class: "form director-form" } do |f| %>

    <div class="name">
      <%= f.label :name, "Nome do Diretor:" %>
      <%= f.text_field :name, placeholder: "Digite o nome do Diretor" %>
    </div>

    <div class="country">
      <%= f.label :nacionality, "Nacionalidade:" %>
      <%= f.text_field :nacionality, placeholder: "Digite a nacionalidade" %>
    </div>

    <div class="date">
      <%= f.label :birthdate, "Data de Nascimento:" %>
      <%= f.date_field :birthdate %>
    </div>

    <div class="genre">
      <%= f.label :favorite_genre_id, "GÃªnero Favorito:" %>
      <%= f.select :favorite_genre_id, Genre.all.map { |g| [g.name, g.id] }, :prompt => "Selecione" %>
    </div>

    <div class="submit">
      <%= f.submit "Cadastrar", class: "submit-button main-button" %>
    </div>

  <% end %>
</section>
